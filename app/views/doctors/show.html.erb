<h1>Doctor: <%= @doctor.name %></h1>
<p>Specialty: <%= @doctor.specialty %></p>
<p>Education: <%= @doctor.education %></p>
<p>Hospital <%= @doctor.hospital.name %></p>
<h4>Patients:</h4>

<% @doctor.patients.each do |patient| %>
<section class= "patient-<%= patient.id %>">
  <p><%= patient.name %>   <%= link_to "Remove Patient", "/doctors/update" %></p>
</section>
<% end %>
